{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix --ext .js,.jsx .",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.0.1",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@stripe/stripe-js": "^1.11.0",
    "dayjs": "^1.9.6",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "framer-motion": "^2.9.4",
    "immer": "^8.0.0",
    "js-cookie": "^2.2.1",
    "next": "^10.0.3",
    "next-seo": "^4.17.0",
    "pino": "^6.7.0",
    "pino-logflare": "^0.3.5",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "^6.11.5",
    "react-icons": "^4.1.0",
    "swr": "^0.3.9"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  }
}
